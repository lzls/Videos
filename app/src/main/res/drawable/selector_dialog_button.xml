<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/dialogBtnPressedColor" />
            <corners android:radius="1.5dp" />
            <padding
                android:left="@dimen/dialogPreferredButtonPaddingHorizontal"
                android:top="@dimen/dialogPreferredButtonPaddingVertical"
                android:right="@dimen/dialogPreferredButtonPaddingHorizontal"
                android:bottom="@dimen/dialogPreferredButtonPaddingVertical" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="1.5dp" />
            <padding
                android:left="@dimen/dialogPreferredButtonPaddingHorizontal"
                android:top="@dimen/dialogPreferredButtonPaddingVertical"
                android:right="@dimen/dialogPreferredButtonPaddingHorizontal"
                android:bottom="@dimen/dialogPreferredButtonPaddingVertical" />
        </shape>
    </item>
</selector>
