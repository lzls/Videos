<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:background="@color/themeColor"
        android:textSize="@dimen/primary_text_size"
        android:textColor="@color/textColorPrimary"
        android:scrollbars="vertical"
        android:gravity="center_horizontal" />

    <include layout="@layout/divider_horizontal_opaque" />

    <TextView
        android:id="@+id/btn_confirm_deleteItemsWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/selector_item"
        android:text="@string/confirm"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@color/okBtnTextColor"
        android:gravity="center_horizontal" />

    <include layout="@layout/divider_horizontal_opaque" />

    <TextView
        android:id="@+id/btn_cancel_deleteItemsWindow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/selector_item"
        android:text="@string/cancel"
        android:textSize="@dimen/secondary_text_size"
        android:textColor="@color/cancelBtnTextColor"
        android:gravity="center_horizontal" />
</LinearLayout>
