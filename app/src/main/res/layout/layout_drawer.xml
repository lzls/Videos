<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/drawerBackground" />

    <com.liuzhenlin.common.view.ScrollDisableListView
        android:id="@+id/list_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="50dp"
        android:layout_gravity="center_vertical"
        android:scrollbars="vertical" />

    <com.liuzhenlin.common.view.TranslucentOnPressedImageView
        android:id="@+id/btn_settings_drawer"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_gravity="bottom|end"
        app:srcCompat="@drawable/ic_settings_white_24dp"
        android:contentDescription="@string/settings" />
</FrameLayout>
