<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:background="@color/videolistOptionsPopupTitleBgColor"
        android:textSize="@dimen/primary_text_size"
        android:textColor="@color/textColorPrimary"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal">

        <requestFocus />
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="8dp"
        android:background="@color/themeColor"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_delete_vlow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/ic_delete_white_27dp"
            app:drawableTint="@color/color_selector_gray_video_option_btn"
            android:text="@string/delete"
            android:textSize="@dimen/icon_bottom_text_size"
            android:textColor="@color/color_selector_text_color_primary"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/btn_rename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/ic_edit_white_27dp"
            app:drawableTint="@color/color_selector_gray_video_option_btn"
            android:text="@string/rename"
            android:textSize="@dimen/icon_bottom_text_size"
            android:textColor="@color/color_selector_text_color_primary"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/ic_share_white_27dp"
            app:drawableTint="@color/color_selector_gray_video_option_btn"
            android:text="@string/share"
            android:textSize="@dimen/icon_bottom_text_size"
            android:textColor="@color/color_selector_text_color_primary"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:id="@+id/btn_details"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:drawableTopCompat="@drawable/ic_info_white_27dp"
            app:drawableTint="@color/color_selector_gray_video_option_btn"
            android:text="@string/details"
            android:textSize="@dimen/icon_bottom_text_size"
            android:textColor="@color/color_selector_text_color_primary"
            android:textAlignment="center"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
